<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.android.timesheetchecker.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android.timesheetchecker.ui.members.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_memberDetailFragment"
            app:destination="@id/memberDetailFragment"
            app:popUpTo="@+id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_devTeamFragment"
            app:destination="@id/devTeamFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/memberDetailFragment"
        android:name="com.android.timesheetchecker.ui.membersdetail.MemberDetailFragment"
        android:label="fragment_member_detail"
        tools:layout="@layout/fragment_member_detail">
        <argument
            android:name="selectedUserId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/devTeamFragment"
        android:name="com.android.timesheetchecker.ui.members.developers.DevTeamFragment"
        android:label="DevTeamFragment" >
        <action
            android:id="@+id/action_devTeamFragment_to_memberDetailFragment"
            app:destination="@id/memberDetailFragment"
            app:popUpTo="@id/devTeamFragment" />
    </fragment>
</navigation>
